@model BodyTemperature
@{
    ViewData["Title"] = "Body Temperature";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-sm" style="width: 28rem; height: 20rem;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Body Temperature</h5>
            <form method="post" asp-action="Index">
                <div class="mb-3">
                    <label asp-for="Value" class="form-label">Enter Temperature:</label>
                    <input type="number" asp-for="Value" class="form-control" step="0.1" placeholder=" " required autofocus/>
                </div>
                <div class="d-flex flex-column gap-2">
                    <input type="submit" value="Check" class="btn btn-primary"/>
                    <a asp-controller="BodyTemperature" asp-action="Index" class="btn btn-secondary">Reset</a> 
                </div>

                @if (Model != null && !string.IsNullOrEmpty(Model.Message) && ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-info mt-3 text-center" id="messageAlert" style="display: none;">
                        @Model.Message
                    </div>
                }
                else if (!ViewData.ModelState.IsValid)
                {
                    <div id="messageAlert" class="alert alert-danger mt-3 text-center">
                        Please correct your input and try again.
                    </div>
                }

            </form>
        </div>
    </div>
   
   @section Scripts {
       <script>
           document.addEventListener("DOMContentLoaded", function () {
               const alert = document.getElementById("messageAlert");
               if (alert) {
                   $(alert).fadeIn("slow");
               }
           });
       </script>
   }
    
</div>
